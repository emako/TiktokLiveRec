<ui:FluentWindow x:Class="TiktokLiveRec.Views.SettingsWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:b="http://schemas.github.com/computedbehaviors/2024/xaml"
                 xmlns:c="http://schemas.github.com/computedconverters/2024/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
                 xmlns:local="clr-namespace:TiktokLiveRec.Views"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                 xmlns:vio="http://schemas.lepo.co/wpfui/2022/xaml/violeta"
                 Title="{I18N Settings}"
                 Width="700"
                 Height="560"
                 d:Background="#FF101010"
                 d:Height="1500"
                 ExtendsContentIntoTitleBar="True"
                 WindowBackdropType="Mica"
                 WindowStartupLocation="CenterOwner"
                 mc:Ignorable="d">
    <Grid>
        <ui:Grid Margin="8,42,4,8">
            <ScrollViewer PanningMode="None" VerticalScrollBarVisibility="Visible">
                <ui:StackPanel Margin="8,0,12,0" Spacing="8">
                    <i:Interaction.Behaviors>
                        <b:PanelTransitionsBehavior Type="DownToUp" />
                    </i:Interaction.Behaviors>
                    <TextBlock Margin="4,0,0,4"
                               FontSize="14"
                               Foreground="{DynamicResource SystemAccentColorPrimaryBrush}"
                               Text="{I18N AppearanceSettings}" />
                    <ui:Card>
                        <ui:Grid MinHeight="35" ColumnDefinitions="Auto,*,Auto">
                            <Grid Grid.Column="0" Margin="0,0,12,0">
                                <TextBlock MinWidth="26"
                                           Margin="4,0,0,0"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontFamily="{DynamicResource SymbolThemeFontFamily}"
                                           FontSize="18"
                                           Text="{x:Static ui:FontSymbols.LocaleLanguage}" />
                            </Grid>
                            <ui:Grid Grid.Column="1" RowDefinitions="Auto,Auto">
                                <TextBlock Grid.Row="0" Text="{I18N Language}" />
                                <TextBlock Grid.Row="1"
                                           FontSize="11"
                                           Foreground="{DynamicResource SystemFillColorSolidNeutralBrush}"
                                           Text="{I18N LanguageHint}" />
                            </ui:Grid>
                            <ComboBox Grid.Column="2"
                                      MinWidth="150"
                                      Margin="0,0,28,0"
                                      SelectedIndex="{Binding LanguageIndex}">
                                <ComboBoxItem Content="{I18N TrackingSystem}" />
                                <ComboBoxItem Content="简体中文" />
                                <ComboBoxItem Content="繁體中文" />
                                <ComboBoxItem Content="English" />
                                <ComboBoxItem Content="日本語" />
                            </ComboBox>
                        </ui:Grid>
                    </ui:Card>
                    <ui:Card>
                        <ui:Grid MinHeight="35" ColumnDefinitions="Auto,*,Auto">
                            <Grid Grid.Column="0" Margin="0,0,12,0">
                                <TextBlock MinWidth="26"
                                           Margin="4,0,0,0"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontFamily="{DynamicResource SymbolThemeFontFamily}"
                                           FontSize="18"
                                           Text="{x:Static ui:FontSymbols.Color}" />
                            </Grid>
                            <ui:Grid Grid.Column="1" RowDefinitions="Auto,Auto">
                                <TextBlock Grid.Row="0" Text="{I18N ThemeColor}" />
                                <TextBlock Grid.Row="1"
                                           FontSize="11"
                                           Foreground="{DynamicResource SystemFillColorSolidNeutralBrush}"
                                           Text="{I18N ThemeColorHint}" />
                            </ui:Grid>
                            <ComboBox Grid.Column="2"
                                      MinWidth="150"
                                      Margin="0,0,28,0"
                                      SelectedIndex="{Binding ThemeIndex}">
                                <ComboBoxItem Content="{I18N TrackingSystem}" />
                                <ComboBoxItem Content="{I18N ThemeOfDarkMode}" />
                                <ComboBoxItem Content="{I18N ThemeOfLightMode}" />
                            </ComboBox>
                        </ui:Grid>
                    </ui:Card>
                    <ui:Card>
                        <ui:Grid MinHeight="35" ColumnDefinitions="Auto,*,Auto">
                            <Grid Grid.Column="0" Margin="0,0,12,0">
                                <TextBlock MinWidth="26"
                                           Margin="4,0,0,0"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontFamily="{DynamicResource SymbolThemeFontFamily}"
                                           FontSize="18"
                                           Text="{x:Static ui:FontSymbols.DeviceMonitorRightPic}" />
                            </Grid>
                            <ui:Grid Grid.Column="1" RowDefinitions="Auto,Auto">
                                <TextBlock Grid.Row="0" Text="{I18N TrayStatus}" />
                                <TextBlock Grid.Row="1"
                                           FontSize="11"
                                           Foreground="{DynamicResource SystemFillColorSolidNeutralBrush}"
                                           Text="{I18N TrayStatusHint}" />
                            </ui:Grid>
                            <ui:ToggleSwitch Grid.Column="2"
                                             Margin="0,0,28,0"
                                             IsChecked="{Binding IsUseStatusTray, Mode=TwoWay}" />
                        </ui:Grid>
                    </ui:Card>
                    <ui:Card>
                        <ui:Grid MinHeight="35" ColumnDefinitions="Auto,*,Auto">
                            <Grid Grid.Column="0" Margin="0,0,12,0">
                                <TextBlock MinWidth="26"
                                           Margin="4,0,0,0"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontFamily="{DynamicResource SymbolThemeFontFamily}"
                                           FontSize="18"
                                           Text="{x:Static ui:FontSymbols.AppIconDefault}" />
                            </Grid>
                            <ui:Grid Grid.Column="1" RowDefinitions="Auto,Auto">
                                <TextBlock Grid.Row="0" Text="{I18N CreateDesktopShortcut}" />
                                <TextBlock Grid.Row="1"
                                           FontSize="11"
                                           Foreground="{DynamicResource SystemFillColorSolidNeutralBrush}"
                                           Text="{I18N CreateDesktopShortcutHint}" />
                            </ui:Grid>
                            <Button Grid.Column="2"
                                    Margin="0,0,28,0"
                                    Command="{Binding CreateDesktopShortcutCommand}"
                                    Content="{I18N ButtonOfCreateNow}" />
                        </ui:Grid>
                    </ui:Card>
                    <TextBlock Margin="4,0,0,4"
                               FontSize="14"
                               Foreground="{DynamicResource SystemAccentColorPrimaryBrush}"
                               Text="{I18N RecordSettings}" />
                    <ui:CardExpander>
                        <ui:CardExpander.Header>
                            <ui:Grid ColumnDefinitions="Auto,*,Auto">
                                <Grid Grid.Column="0" Margin="0,0,12,0">
                                    <TextBlock MinWidth="26"
                                               Margin="4,0,0,0"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               FontFamily="{StaticResource SymbolThemeFontFamily}"
                                               FontSize="18"
                                               Text="{x:Static ui:FontSymbols.Ringer}" />
                                </Grid>
                                <ui:Grid Grid.Column="1" RowDefinitions="Auto,Auto">
                                    <TextBlock Grid.Row="0" Text="{I18N LiveNotification}" />
                                    <TextBlock Grid.Row="1"
                                               FontSize="11"
                                               Foreground="{DynamicResource SystemFillColorSolidNeutralBrush}"
                                               Text="{I18N LiveNotificationHint}" />
                                </ui:Grid>
                                <Grid Grid.Column="2" Margin="0,0,12,0">
                                    <ui:ToggleSwitch IsChecked="{Binding IsToNotify, Mode=TwoWay}" />
                                </Grid>
                            </ui:Grid>
                        </ui:CardExpander.Header>
                        <ui:StackPanel Spacing="8">
                            <ui:StackPanel Margin="42,0,28,0"
                                           IsEnabled="{Binding IsToNotify}"
                                           Spacing="12">
                                <CheckBox Content="{I18N LiveNotificationToSystem}" IsChecked="{Binding IsToNotifyWithSystem, Mode=TwoWay}" />
                                <ui:Grid ColumnDefinitions="Auto,*">
                                    <CheckBox Grid.Column="0"
                                              Content="{I18N LiveNotificationToPlayMusic}"
                                              IsChecked="{Binding IsToNotifyWithMusic, Mode=TwoWay}" />
                                    <ui:TextBox Grid.Column="1"
                                                Margin="8,0,0,0"
                                                PlaceholderText="{I18N LiveNotificationToPlayMusicPath}"
                                                Text="{Binding ToNotifyWithMusicPath, Mode=TwoWay}" />
                                </ui:Grid>
                                <ui:Grid ColumnDefinitions="Auto,*">
                                    <CheckBox Grid.Column="0"
                                              Content="{I18N LiveNotificationToMail}"
                                              IsChecked="{Binding IsToNotifyWithEmail, Mode=TwoWay}" />
                                    <ui:Grid Grid.Column="1" ColumnDefinitions="*,*,*">
                                        <ui:TextBox Grid.Column="0"
                                                    Margin="8,0,0,0"
                                                    PlaceholderText="SMTP"
                                                    Text="{Binding ToNotifyWithEmailSmtp, Mode=TwoWay}" />
                                        <ui:TextBox Grid.Column="1"
                                                    Margin="8,0,0,0"
                                                    PlaceholderText="{I18N Account}"
                                                    Text="{Binding ToNotifyWithEmailUserName, Mode=TwoWay}" />
                                        <ui:TextBox Grid.Column="2"
                                                    Margin="8,0,0,0"
                                                    PlaceholderText="{I18N Password}"
                                                    Text="{Binding ToNotifyWithEmailPassword, Mode=TwoWay}" />
                                    </ui:Grid>
                                </ui:Grid>
                                <ui:Grid ColumnDefinitions="Auto,*">
                                    <CheckBox Grid.Column="0"
                                              Content="{I18N LiveNotificationToGotoLiveRoom}"
                                              IsChecked="{Binding IsToNotifyGotoRoomUrl, Mode=TwoWay}" />
                                    <ui:ToggleSwitch Grid.Column="1"
                                                     Margin="8,0,0,0"
                                                     Content="{I18N LiveNotificationToGotoLiveRoomAndMute}"
                                                     IsChecked="{Binding IsToNotifyGotoRoomUrlAndMute, Mode=TwoWay}" />
                                </ui:Grid>
                            </ui:StackPanel>
                        </ui:StackPanel>
                    </ui:CardExpander>
                    <ui:Card>
                        <ui:Grid MinHeight="35" ColumnDefinitions="Auto,*,Auto">
                            <Grid Grid.Column="0" Margin="0,0,12,0">
                                <TextBlock MinWidth="26"
                                           Margin="4,0,0,0"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontFamily="{DynamicResource SymbolThemeFontFamily}"
                                           FontSize="18"
                                           Text="{x:Static ui:FontSymbols.Record}" />
                            </Grid>
                            <ui:Grid Grid.Column="1" RowDefinitions="Auto,Auto">
                                <TextBlock Grid.Row="0" Text="{I18N EnableRecord}" />
                                <TextBlock Grid.Row="1"
                                           FontSize="11"
                                           Foreground="{DynamicResource SystemFillColorSolidNeutralBrush}"
                                           Text="{I18N EnableRecordHint}" />
                            </ui:Grid>
                            <ui:ToggleSwitch Grid.Column="2"
                                             Margin="0,0,28,0"
                                             IsChecked="{Binding IsToRecord, Mode=TwoWay}" />
                        </ui:Grid>
                    </ui:Card>
                    <ui:Card>
                        <ui:Grid MinHeight="35" ColumnDefinitions="Auto,*,Auto">
                            <Grid Grid.Column="0" Margin="0,0,12,0">
                                <TextBlock MinWidth="26"
                                           Margin="4,0,0,0"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontFamily="{DynamicResource SymbolThemeFontFamily}"
                                           FontSize="18"
                                           Text="{x:Static ui:FontSymbols.DeviceMonitorRightPic}" />
                            </Grid>
                            <ui:Grid Grid.Column="1" RowDefinitions="Auto,Auto">
                                <TextBlock Grid.Row="0" Text="{I18N RoutineInterval}" />
                                <TextBlock Grid.Row="1"
                                           FontSize="11"
                                           Foreground="{DynamicResource SystemFillColorSolidNeutralBrush}"
                                           Text="{I18N RoutineIntervalHint}" />
                            </ui:Grid>
                            <ui:NumberBox Grid.Column="2"
                                          MinWidth="150"
                                          Margin="0,0,28,0"
                                          Maximum="{c:DoubleMaxValue}"
                                          Minimum="500"
                                          Value="{Binding RoutineInterval, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </ui:Grid>
                    </ui:Card>
                    <ui:CardExpander>
                        <ui:CardExpander.Header>
                            <ui:Grid ColumnDefinitions="Auto,*,Auto">
                                <Grid Grid.Column="0" Margin="0,0,12,0">
                                    <TextBlock MinWidth="26"
                                               Margin="4,0,0,0"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               FontFamily="{DynamicResource SymbolThemeFontFamily}"
                                               FontSize="18"
                                               Text="{x:Static ui:FontSymbols.Video}" />
                                </Grid>
                                <ui:Grid Grid.Column="1" RowDefinitions="Auto,Auto">
                                    <TextBlock Grid.Row="0" Text="{I18N RecordFormat}" />
                                    <TextBlock Grid.Row="1"
                                               FontSize="11"
                                               Foreground="{DynamicResource SystemFillColorSolidNeutralBrush}"
                                               Text="{I18N RecordFormatHint}" />
                                </ui:Grid>
                                <Grid Grid.Column="2" Margin="0,0,12,0">
                                    <ComboBox MinWidth="150" SelectedIndex="{Binding RecordFormatIndex, Mode=TwoWay}">
                                        <ComboBoxItem Content="TS" />
                                        <ComboBoxItem Content="TS+MP4" IsEnabled="False" />
                                        <ComboBoxItem Content="TS+MKV" IsEnabled="False" />
                                    </ComboBox>
                                </Grid>
                            </ui:Grid>
                        </ui:CardExpander.Header>
                        <ui:StackPanel Spacing="8">
                            <ui:StackPanel Margin="42,0,28,0" Spacing="12">
                                <CheckBox Grid.Column="0"
                                          Content="{I18N RecordFormatAutoRemove}"
                                          IsChecked="{Binding IsRemoveTs, Mode=TwoWay}" />
                            </ui:StackPanel>
                        </ui:StackPanel>
                    </ui:CardExpander>
                    <ui:CardExpander>
                        <ui:CardExpander.Header>
                            <ui:Grid ColumnDefinitions="Auto,*,Auto">
                                <Grid Grid.Column="0" Margin="0,0,12,0">
                                    <TextBlock MinWidth="26"
                                               Margin="4,0,0,0"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               FontFamily="{DynamicResource SymbolThemeFontFamily}"
                                               FontSize="18"
                                               Text="{x:Static ui:FontSymbols.Folder}" />
                                </Grid>
                                <ui:Grid Grid.Column="1" RowDefinitions="Auto,Auto">
                                    <TextBlock Grid.Row="0" Text="{I18N SaveFolder}" />
                                    <TextBlock Grid.Row="1"
                                               FontSize="11"
                                               Foreground="{DynamicResource SystemFillColorSolidNeutralBrush}"
                                               Text="{I18N SaveFolderHint}" />
                                </ui:Grid>
                                <Grid Grid.Column="2" Margin="0,0,12,0">
                                    <!--  EMPTY  -->
                                </Grid>
                            </ui:Grid>
                        </ui:CardExpander.Header>
                        <ui:StackPanel Spacing="8">
                            <ui:Grid Margin="42,0,28,0" ColumnDefinitions="Auto,*,Auto,Auto">
                                <TextBlock Grid.Column="0"
                                           VerticalAlignment="Center"
                                           Text="{I18N SaveFolder}" />
                                <ui:TextBox Grid.Column="1"
                                            Margin="8,0,0,0"
                                            PlaceholderText="downloads"
                                            Text="{Binding SaveFolder, Mode=TwoWay}" />
                                <Button Grid.Column="2"
                                        Margin="8,0,0,0"
                                        Command="{Binding SelectSaveFolderCommand}"
                                        Content="{I18N SelectFolder}" />
                                <Button Grid.Column="3"
                                        Margin="8,0,0,0"
                                        Command="{Binding OpenSaveFolderCommand}"
                                        Content="{I18N OpenFolder}" />
                            </ui:Grid>
                        </ui:StackPanel>
                    </ui:CardExpander>
                    <ui:CardExpander>
                        <ui:CardExpander.Header>
                            <ui:Grid ColumnDefinitions="Auto,*,Auto">
                                <Grid Grid.Column="0" Margin="0,0,12,0">
                                    <TextBlock MinWidth="26"
                                               Margin="4,0,0,0"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               FontFamily="{DynamicResource SymbolThemeFontFamily}"
                                               FontSize="18"
                                               Text="{x:Static ui:FontSymbols.Play}" />
                                </Grid>
                                <ui:Grid Grid.Column="1" RowDefinitions="Auto,Auto">
                                    <TextBlock Grid.Row="0" Text="{I18N PlayRecord}" />
                                    <TextBlock Grid.Row="1"
                                               FontSize="11"
                                               Foreground="{DynamicResource SystemFillColorSolidNeutralBrush}"
                                               Text="{I18N PlayRecordHint}" />
                                </ui:Grid>
                                <Grid Grid.Column="2" Margin="0,0,12,0">
                                    <!--  EMPTY  -->
                                </Grid>
                            </ui:Grid>
                        </ui:CardExpander.Header>
                        <ui:StackPanel Spacing="8">
                            <ui:Grid Margin="42,0,28,0" ColumnDefinitions="Auto,Auto,Auto">
                                <TextBlock Grid.Row="0"
                                           VerticalAlignment="Center"
                                           Text="{I18N Player}" />
                                <ComboBox Grid.Column="1"
                                          MinWidth="150"
                                          Margin="16,0,0,0"
                                          SelectedIndex="{Binding PlayerIndex, Mode=TwoWay}">
                                    <ComboBoxItem Content="{I18N PlayerInner}" ToolTip="{I18N PlayerInnerHint}" />
                                    <ComboBoxItem Content="{I18N PlayerSystem}" ToolTip="{I18N PlayerSystemHint}" />
                                </ComboBox>
                                <CheckBox Grid.Column="2"
                                          Margin="16,0,0,0"
                                          Content="{I18N PlayerInnerUseRect}"
                                          IsChecked="{Binding IsPlayerRect, Mode=TwoWay}"
                                          IsEnabled="{Binding PlayerIndex, Converter={x:Static c:IntToBoolConverter.Instance}, ConverterParameter={c:Int Value=0}}" />
                            </ui:Grid>
                        </ui:StackPanel>
                    </ui:CardExpander>
                    <TextBlock Margin="4,0,0,4"
                               FontSize="14"
                               Foreground="{DynamicResource SystemAccentColorPrimaryBrush}"
                               Text="{I18N LongRunningSettings}" />
                    <ui:Card>
                        <ui:Grid MinHeight="35" ColumnDefinitions="Auto,*,Auto">
                            <Grid Grid.Column="0" Margin="0,0,12,0">
                                <TextBlock MinWidth="26"
                                           Margin="4,0,0,0"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontFamily="{DynamicResource SymbolThemeFontFamily}"
                                           FontSize="18"
                                           Text="{x:Static ui:FontSymbols.Recent}" />
                            </Grid>
                            <ui:Grid Grid.Column="1" RowDefinitions="Auto,Auto">
                                <TextBlock Grid.Row="0" Text="{I18N KeepAwake}" />
                                <TextBlock Grid.Row="1"
                                           FontSize="11"
                                           Foreground="{DynamicResource SystemFillColorSolidNeutralBrush}"
                                           Text="{I18N KeepActiveHint}" />
                            </ui:Grid>
                            <ui:ToggleSwitch Grid.Column="2"
                                             Margin="0,0,28,0"
                                             IsChecked="{Binding IsUseKeepAwake, Mode=TwoWay}" />
                        </ui:Grid>
                    </ui:Card>
                    <ui:CardExpander>
                        <ui:CardExpander.Header>
                            <ui:Grid ColumnDefinitions="Auto,*,Auto">
                                <Grid Grid.Column="0" Margin="0,0,12,0">
                                    <TextBlock MinWidth="26"
                                               Margin="4,0,0,0"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               FontFamily="{DynamicResource SymbolThemeFontFamily}"
                                               FontSize="18"
                                               Text="{x:Static ui:FontSymbols.PowerButton}" />
                                </Grid>
                                <ui:Grid Grid.Column="1" RowDefinitions="Auto,Auto">
                                    <TextBlock Grid.Row="0" Text="{I18N AutoShutdown}" />
                                    <TextBlock Grid.Row="1"
                                               FontSize="11"
                                               Foreground="{DynamicResource SystemFillColorSolidNeutralBrush}"
                                               Text="{I18N AutoShutdownHint}" />
                                </ui:Grid>
                                <Grid Grid.Column="2" Margin="0,0,12,0">
                                    <ui:ToggleSwitch IsChecked="{Binding IsUseAutoShutdown, Mode=TwoWay}" />
                                </Grid>
                            </ui:Grid>
                        </ui:CardExpander.Header>
                        <ui:StackPanel IsEnabled="{Binding IsUseAutoShutdown}" Spacing="12">
                            <ui:Grid Margin="42,0,28,0" ColumnDefinitions="Auto,*">
                                <TextBlock VerticalAlignment="Center" Text="{I18N AutoShutdownTime}" />
                                <ui:StackPanel Grid.Column="1"
                                               Margin="16,0,0,0"
                                               Orientation="Horizontal"
                                               Spacing="8">
                                    <ComboBox SelectedIndex="{Binding AutoShutdownTimeHour, Mode=TwoWay}">
                                        <ComboBoxItem Content="00" />
                                        <ComboBoxItem Content="01" />
                                        <ComboBoxItem Content="02" />
                                        <ComboBoxItem Content="03" />
                                        <ComboBoxItem Content="04" />
                                        <ComboBoxItem Content="05" />
                                        <ComboBoxItem Content="06" />
                                        <ComboBoxItem Content="07" />
                                        <ComboBoxItem Content="08" />
                                        <ComboBoxItem Content="09" />
                                        <ComboBoxItem Content="10" />
                                        <ComboBoxItem Content="11" />
                                        <ComboBoxItem Content="12" />
                                        <ComboBoxItem Content="13" />
                                        <ComboBoxItem Content="14" />
                                        <ComboBoxItem Content="15" />
                                        <ComboBoxItem Content="16" />
                                        <ComboBoxItem Content="17" />
                                        <ComboBoxItem Content="18" />
                                        <ComboBoxItem Content="19" />
                                        <ComboBoxItem Content="20" />
                                        <ComboBoxItem Content="21" />
                                        <ComboBoxItem Content="22" />
                                        <ComboBoxItem Content="23" />
                                    </ComboBox>
                                    <TextBlock HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Text=":" />
                                    <ComboBox SelectedIndex="{Binding AutoShutdownTimeMinute, Mode=TwoWay}">
                                        <ComboBoxItem Content="00" />
                                        <ComboBoxItem Content="01" />
                                        <ComboBoxItem Content="02" />
                                        <ComboBoxItem Content="03" />
                                        <ComboBoxItem Content="04" />
                                        <ComboBoxItem Content="05" />
                                        <ComboBoxItem Content="06" />
                                        <ComboBoxItem Content="07" />
                                        <ComboBoxItem Content="08" />
                                        <ComboBoxItem Content="09" />
                                        <ComboBoxItem Content="10" />
                                        <ComboBoxItem Content="11" />
                                        <ComboBoxItem Content="12" />
                                        <ComboBoxItem Content="13" />
                                        <ComboBoxItem Content="14" />
                                        <ComboBoxItem Content="15" />
                                        <ComboBoxItem Content="16" />
                                        <ComboBoxItem Content="17" />
                                        <ComboBoxItem Content="18" />
                                        <ComboBoxItem Content="19" />
                                        <ComboBoxItem Content="20" />
                                        <ComboBoxItem Content="21" />
                                        <ComboBoxItem Content="22" />
                                        <ComboBoxItem Content="23" />
                                        <ComboBoxItem Content="24" />
                                        <ComboBoxItem Content="25" />
                                        <ComboBoxItem Content="26" />
                                        <ComboBoxItem Content="27" />
                                        <ComboBoxItem Content="28" />
                                        <ComboBoxItem Content="29" />
                                        <ComboBoxItem Content="30" />
                                        <ComboBoxItem Content="31" />
                                        <ComboBoxItem Content="32" />
                                        <ComboBoxItem Content="33" />
                                        <ComboBoxItem Content="34" />
                                        <ComboBoxItem Content="35" />
                                        <ComboBoxItem Content="36" />
                                        <ComboBoxItem Content="37" />
                                        <ComboBoxItem Content="38" />
                                        <ComboBoxItem Content="39" />
                                        <ComboBoxItem Content="40" />
                                        <ComboBoxItem Content="41" />
                                        <ComboBoxItem Content="42" />
                                        <ComboBoxItem Content="43" />
                                        <ComboBoxItem Content="44" />
                                        <ComboBoxItem Content="45" />
                                        <ComboBoxItem Content="46" />
                                        <ComboBoxItem Content="47" />
                                        <ComboBoxItem Content="48" />
                                        <ComboBoxItem Content="49" />
                                        <ComboBoxItem Content="50" />
                                        <ComboBoxItem Content="51" />
                                        <ComboBoxItem Content="52" />
                                        <ComboBoxItem Content="53" />
                                        <ComboBoxItem Content="54" />
                                        <ComboBoxItem Content="55" />
                                        <ComboBoxItem Content="56" />
                                        <ComboBoxItem Content="57" />
                                        <ComboBoxItem Content="58" />
                                        <ComboBoxItem Content="59" />
                                    </ComboBox>
                                </ui:StackPanel>
                            </ui:Grid>
                        </ui:StackPanel>
                    </ui:CardExpander>
                    <TextBlock Margin="4,0,0,4"
                               FontSize="14"
                               Foreground="{DynamicResource SystemAccentColorPrimaryBrush}"
                               Text="{I18N NetworkSettings}" />
                    <ui:CardExpander>
                        <ui:CardExpander.Header>
                            <ui:Grid ColumnDefinitions="Auto,*,Auto">
                                <Grid Grid.Column="0" Margin="0,0,12,0">
                                    <TextBlock MinWidth="26"
                                               Margin="4,0,0,0"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               FontFamily="{DynamicResource SymbolThemeFontFamily}"
                                               FontSize="18"
                                               Text="{x:Static ui:FontSymbols.VPN}" />
                                </Grid>
                                <ui:Grid Grid.Column="1" RowDefinitions="Auto,Auto">
                                    <TextBlock Grid.Row="0" Text="{I18N UseProxy}" />
                                    <TextBlock Grid.Row="1"
                                               FontSize="11"
                                               Foreground="{DynamicResource SystemFillColorSolidNeutralBrush}"
                                               Text="{I18N UseProxyHint}" />
                                </ui:Grid>
                                <Grid Grid.Column="2" Margin="0,0,12,0">
                                    <ui:ToggleSwitch IsChecked="{Binding IsUseProxy, Mode=TwoWay}" />
                                </Grid>
                            </ui:Grid>
                        </ui:CardExpander.Header>
                        <ui:StackPanel IsEnabled="{Binding IsUseProxy}" Spacing="12">
                            <ui:Grid Margin="42,0,28,0" ColumnDefinitions="Auto,*,Auto">
                                <TextBlock VerticalAlignment="Center" Text="{I18N ProxyHostAndPort}" />
                                <ui:TextBox Grid.Column="1"
                                            Margin="8,0,0,0"
                                            PlaceholderText="127.0.0.1:7890"
                                            Text="{Binding ProxyUrl, Mode=TwoWay}" />
                                <Button Grid.Column="2"
                                        Margin="8,0,0,0"
                                        Command="{Binding CheckProxyUrlCommand}"
                                        Content="{I18N CheckConnectivity}" />
                            </ui:Grid>
                        </ui:StackPanel>
                    </ui:CardExpander>
                    <ui:CardExpander>
                        <ui:CardExpander.Header>
                            <ui:Grid ColumnDefinitions="Auto,*,Auto">
                                <Grid Grid.Column="0" Margin="0,0,12,0">
                                    <TextBlock MinWidth="26"
